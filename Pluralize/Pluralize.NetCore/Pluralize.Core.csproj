<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <TargetFrameworks>net6.0;net7.0;net8.0</TargetFrameworks>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
        <Title>Pluralize Core</Title>
        <Version>2.0.0.3</Version>
        <Description>Word pluralizer and singulizer, for .Net Core.</Description>
        <Copyright>© 2024 Ashraf Sada, and others</Copyright>
        <PackageProjectUrl>https://github.com/AshrafSada/PluralizeNetCore</PackageProjectUrl>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <RepositoryUrl>https://github.com/AshrafSada/PluralizeNetCore</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <PackageTags>Word,pluralize,singularize</PackageTags>
        <PackageIcon>icon.jpeg</PackageIcon>
        <PackageLicenseFile>LICENSE</PackageLicenseFile>
        <Authors>Ashraf Sada,</Authors>
        <Product>$(AssemblyName)</Product>
        <PackageReleaseNotes>Added word null and empty checks, with extra unit testing</PackageReleaseNotes>
    </PropertyGroup>

    <ItemGroup>
        <None Include="..\..\icon.jpeg">
            <Pack>True</Pack>
            <PackagePath>\</PackagePath>
        </None>
        <None Include="..\..\LICENSE">
            <Pack>True</Pack>
            <PackagePath>\</PackagePath>
        </None>
        <None Include="..\..\README.md">
            <Pack>True</Pack>
            <PackagePath>\</PackagePath>
        </None>
    </ItemGroup>
</Project>
